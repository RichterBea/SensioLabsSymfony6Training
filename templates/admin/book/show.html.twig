{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <h1>Book</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ book.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ book.title }}</td>
        </tr>
        <tr>
            <th>Isbn</th>
            <td>{{ book.isbn }}</td>
        </tr>
        <tr>
            <th>Author</th>
            <td>{{ book.author }}</td>
        </tr>
        <tr>
            <th>ReleasedAt</th>
            <td>{{ book.releasedAt ? book.releasedAt|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Plot</th>
            <td>{{ book.plot }}</td>
        </tr>
        </tbody>
    </table>

    <button type="submit" class="btn"><a href="{{ path('app_admin_book_index') }}">back to list</a></button>

    <button type="submit" class="btn"><a href="{{ path('app_admin_book_edit', {'id': book.id}) }}">edit</a></button>

    <button type="submit" class="btn">{{ include('admin/book/_delete_form.html.twig') }}</button>
{% endblock %}